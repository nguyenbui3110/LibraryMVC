@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin";
}
@model PagingItem<LibraryItemModel>

<div class="d-flex justify-content-end mb-2">
    <a asp-action="AddItem" class="btn btn-success">Add New Item</a>
</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">PublicationDate</th>
        <th scope="col">Type</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td>@item.PublicationDate</td>
            <td>@item.Type</td>
            <td>
                <a asp-action="UpdateItem" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                <a asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<partial name="_Paging" model="Model"/>